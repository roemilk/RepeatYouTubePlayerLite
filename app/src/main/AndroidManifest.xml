<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.venuskimblessing.youtuberepeatfree">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.permission.CALL_PHONE"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--<uses-permission android:name="com.android.vending.BILLING" /> billing 라이브러리에 애초에 포함되어 있어서 따로 선언할 필요가 없음. -->

    <application
        android:name=".Application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity
            android:name="com.venuskimblessing.youtuberepeatfree.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <data android:mimeType="text/plain"></data>
            </intent-filter>
        </activity>

        <activity
            android:name="com.venuskimblessing.youtuberepeatfree.GuideActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.venuskimblessing.youtuberepeatfree.Player.PlayerActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.venuskimblessing.youtuberepeatfree.SearchActivity"
            android:configChanges="screenSize|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>

        <activity
            android:name="com.venuskimblessing.youtuberepeatfree.LoadingActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".BuyPremiumActivity"
            android:screenOrientation="portrait"></activity>

        <service
            android:name="com.venuskimblessing.youtuberepeatfree.FloatingView.FloatingService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.SYSTEM_ALERT_WINDOW"></service>

        <receiver
            android:name=".BroadcastReceiver.ShareAppReciver"
            android:exported="false" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider2346907598897007"
            android:exported="true" />
    </application>
</manifest>