<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000">

    <TextView
        android:id="@+id/dialog_timePicker_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_timePicker_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dialog_timePicker_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_timePicker_bottom_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dialog_timePicker_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="180dp"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorWhite"
            app:np_selectedTextSize="24dp"
            app:np_textColor="@color/colorWhite"
            app:np_textSize="24dp"
            app:np_value="0"
            app:np_width="64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" : "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dialog_timePicker_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="180dp"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorWhite"
            app:np_selectedTextSize="24dp"
            app:np_textColor="@color/colorWhite"
            app:np_textSize="24dp"
            app:np_value="0"
            app:np_width="64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" : "
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dialog_timePicker_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="180dp"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorWhite"
            app:np_selectedTextSize="24dp"
            app:np_textColor="@color/colorWhite"
            app:np_textSize="24dp"
            app:np_value="0"
            app:np_width="64dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_timePicker_bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/dialog_timePicker_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FF9800"
            android:text="@string/dialog_default_yes" />

        <Button
            android:id="@+id/dialog_timePicker_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#607D8B"
            android:text="@string/dialog_default_no" />
    </LinearLayout>
</RelativeLayout>
