<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:id="@+id/cardview"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--card_view:cardBackgroundColor="#FFFFFF"-->
    <!--card_view:cardCornerRadius="5dp"-->
    <!--card_view:cardUseCompatPadding="true"-->
    <!--card_view:contentPadding="8dp">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/search_cardview_image_lay"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/search_cardview_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/search_cardview_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#000000"
                android:padding="6dp"
                android:text="TEST"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/search_cardview_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_cardview_image_lay"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            tools:ignore="EllipsizeMaxLines" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_cardview_textView"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/search_cardview_persion_imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_person_24dp" />

            <TextView
                android:id="@+id/search_cardview_channelTitle_textView"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/search_cardview_persion_imageView"
                android:ellipsize="marquee"
                android:singleLine="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/search_cardview_viewCount_textView"
                android:src="@drawable/ic_streetview_24dp" />

            <TextView
                android:id="@+id/search_cardview_viewCount_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
