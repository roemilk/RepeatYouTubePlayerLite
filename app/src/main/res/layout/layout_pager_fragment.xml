<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/guide_pager_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/guide_pager_bottom_lay"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:id="@+id/guide_last_lay"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/guide_last_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:text="@string/guidelast_content"
            />

        <com.dd.morphingbutton.MorphingButton
            android:id="@+id/guide_pager_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_last_textView"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="@string/guidelast_start"
            android:textColor="#FFFFFF" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/guide_pager_bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#4CAF50"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/guide_pager_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>
