<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timer_parent_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:orientation="vertical"
        android:background="#1d1e20"
        android:id="@+id/timer_root_input_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="앱 종료 타이머"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="지정한 시간뒤에 앱이 자동종료됩니다."
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timer_time_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="0H 00M"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/timer_backspace_button"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0"
                android:background="@drawable/ic_backspace_white_24dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <GridLayout
            android:id="@+id/timer_gridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="true">

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="1"
                android:text="1" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="2"
                android:text="2" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="3"
                android:text="3" />


            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="4"
                android:text="4" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="5"
                android:text="5" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="6"
                android:text="6" />


            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="7"
                android:text="7" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="8"
                android:text="8" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="9"
                android:text="9" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="-1"
                android:text="취소" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="0"
                android:text="0" />

            <Button
                style="@style/timer_button_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="-2"
                android:text="시작" />
        </GridLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/timer_root_result_lay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timer_count_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0H 00M"
            android:textColor="#FFFFFF"
            android:layout_above="@+id/timer_slideToActView"
            android:layout_marginBottom="30dp"
            android:textSize="40sp"
            android:textStyle="bold" />

        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/timer_slideToActView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            app:text="@string/timer_unlock_hint" />
    </RelativeLayout>
</LinearLayout>
